    title: "Mini golf",
    icon: "/icons/minigolf.svg",
  },
  {
    id: 3,
    url: "/images/atributos/fogateras.png",
    title: "Fogateras",
    icon: "/icons/fogata.svg",
  },
  {
    id: 4,
    url: "/images/atributos/juegos-infantiles.png",
    title: "Juegos Infantiles",
    icon: "/icons/parque.svg",
  },
];

const sitiosCercanosData = [
  {
    id: 1,
    title: "PLAYA",
    subtitle: "Farallones",
    url: "/images/sitios-cercanos/playa-farallones.png",
  },
  {
    id: 2,
    title: "PLAYA",
    subtitle: "León Dormido",
    url: "/images/sitios-cercanos/playa-leon-dormido.png",
  },
  {
    id: 3,
    title: "PLAYA",
