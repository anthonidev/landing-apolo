---
export interface Props {
  topText: string;
  bottomText: string;
}

const { topText, bottomText } = Astro.props;
---

<div class="flex items-center justify-center my-12 md:my-16" role="banner">
  <img
    src="/icons/gotas.svg"
    alt=""
    class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 animate-float transition-transform duration-300 hover:scale-125"
    role="presentation"
    aria-hidden="true"
  />

  <hgroup class="text-center">
    <p
      class="text-secondary text-2xl md:text-3xl lg:text-4xl mb-2 leading-0 transition-colors duration-300 hover:text-primary"
    >
      {topText}
    </p>
    <h2
      class="text-primary text-3xl md:text-4xl lg:text-5xl font-black transition-all duration-500 hover:scale-105"
    >
      {bottomText}
    </h2>
  </hgroup>

  <img
    src="/icons/gotas.svg"
    alt=""
    class="w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 scale-x-[-1] animate-float transition-transform duration-300 hover:scale-125"
    role="presentation"
    aria-hidden="true"
    style="animation-delay: 1.5s;"
  />
</div>
